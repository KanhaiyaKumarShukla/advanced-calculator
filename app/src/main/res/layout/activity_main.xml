<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/background_img"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Arithmatic_Btn"
        style="@style/gray_btn"
        android:text="@string/arithmaticStr"
        android:layout_marginTop="50dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/lcm_Btn"
        style="@style/gray_btn"
        android:text="@string/lcmStr" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/hcf_Btn"
        style="@style/gray_btn"
        android:text="@string/hcfStr" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/unitConversion_Btn"
        style="@style/gray_btn"
        android:text="@string/unitConversionStr" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/trigonomatry_Btn"
            style="@style/gray_btn"
            android:text="@string/trignonmetryStr" />

    </LinearLayout>

</ScrollView>